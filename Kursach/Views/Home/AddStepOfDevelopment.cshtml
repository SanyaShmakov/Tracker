@model Kursach.Models.StepOfDevelopmentModel

@{
    //ViewData["Title"] = "AddStepOfDevelopment";
    //ViewData["ProjectId"] = "proj";
}

<h2>Добавление нового этапа</h2>

<h4>для проекта @ViewData["ProjectName"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="WriteNewStep">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Name" class="control-label">Название этапа:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Описание этапа:</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
           
            <div class="form-group">
               
                <input asp-for="ProjectId" class="form-control" type="hidden"/>
                <span asp-validation-for="ProjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к проектам</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
