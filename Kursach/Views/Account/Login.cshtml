@model LoginModel

<div style="margin: auto;
 width: 25%;  ">
    <h2>Вход на сайт</h2>
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-4">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                            <div class="form-group">
                                <label asp-for="Email">Введите Email</label><br />
                                <input type="text" asp-for="Email" class="form-control"  />
                            </div>
                            <div class="form-group">
                                <label asp-for="Email">Введите имя</label><br />
                                <input type="text" asp-for="Name" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Email">Введите пароль</label><br />
                                <input asp-for="Password" class="form-control"  type="password" />
                            </div>
                            <button type="submit" id="sendlogin" class="btn btn-primary">Войти</button>
                        </form>
                        <a asp-action="Register" asp-controller="Account"> Регистрация</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.")
   
    

</div>
